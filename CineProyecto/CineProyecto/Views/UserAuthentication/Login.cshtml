@model CineProyecto.Models.DTO.LoginModel
@{
}
<center>
<form class="w-40" asp-action="Login" method="post">
    <h2 class="pb-10">INICIAR SESION</h2>
    <div class="input-container">
        <label asp-for="Username" class="w-40">Nombre De Usuario</label>
        <input type="text" class="input" asp-for="Username">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Username"></span>
    </div>


    <div class="input-container">
        <label asp-for="Password" class="w-40">Contraseña</label>
        <input type="password" class="input" asp-for="Password">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Password"></span>
    </div>


    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }
        <center>
    
        <button class="btn btn-danger" type="submit">Entrar</button>
        @*<a class="btn btn-sec" href="#">Add more</a>*@
        </center>
    
</form>
</center>