@model CineProyecto.Models.Domain.Movie
@{
}

<center>
<form class="w-40" asp-action="Add" method="post" enctype="multipart/form-data">
    <h2 class="pb-10">AÑADIR PELICULA</h2>

    <div class="input-container">
        <label asp-for="Title" class="w-40">Titulo</label>
        <input type="text" class="input" asp-for="Title">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Title"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Director" class="w-40">Poster</label>
        <input type="file" asp-for="ImageFile">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ImageFile"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Genres" class="w-40">Genero</label>
    
        <select asp-items="Model.GenreList" class="input" asp-for="Genres" multiple>
                <option value="">----------------------------SELECCIONA LOS GENEROS----------------------------</option>
        </select>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Genres"> </span>
    </div>


    <div class="input-container">
        <label asp-for="Sinopsis" class="w-40">Sinopsis</label>
        <input type="text" class="input" asp-for="Sinopsis">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Sinopsis"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Director" class="w-40">Director</label>
        <input type="text" class="input" asp-for="Director">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Director"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <center>
        <button class="btn btn-danger" type="submit">Guardar</button>
        <a class="btn btn-sec" href="/Movie/MovieList">Todas Las PelÍculas</a>
    </div>
        </center>
</form>
</center>  